    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <h2>Select the cards you want to trade</h2><br>
        
        <%= link_to("Go back to your dashboard", trainers_home_path)%>

        <ul>
        <% @cards_in_binder.each do |card| %>

           <li><%= card.display_card_name_from_binder  %><br>
           Trade Status: 
            <% if card.for_trade == nil %>
            Not for trade 
            <% elsif card.for_trade == false %>
            Not for trade 
            <% elsif card.for_trade == true %>
            In trade pile 
            <% end %>
           

           <%= form_tag ({controller: 'card_binders', action: 'update', method: 'patch'}) do |f| %>
            <%= f.radio_button :for_trade, true :checked => true %>
            <%= f.submit "Mark Card for trade"%>
           <% end %>
           </li><br>
        <% end %>
        </ul>
    </body>
</html>